# one-to-many relationship
type ApplicationsConnection {
  edges: [ApplicationEdge]
  count: Int
  pageInfo: PageInfo
}

# Edge is a sort of intermediate type between the Connection and the type youâ€™re connecting to
type ApplicationEdge {
  cursor: String
  node: Application
}

# Node
type Application {
  affiliation: Affiliation!,
  environment: String,
  namespace: Namespace,
  name: String!,
  status: Status!,
  version: Version!
}

type Status {
  code: String!,
  comment: String
}

type Version {
  deployTag: String,
  auroraVersion: String
}
